@model List<JadooTravel.Dtos.TestimonialDtos.ResultTestimonialDto>

@{
    ViewData["Title"] = "Testimonial Listesi";
    Layout = "~/Views/Admin/Index.cshtml";
}

<div class="container py-5">
    <h3 class="mb-4 fw-bold text-center">@ViewData["Title"]</h3>

    <div class="row g-3">
        @foreach (var item in Model)
        {
            <div class="col-sm-6 col-md-3">
                <div class="card shadow-sm rounded-4 h-100">
                    <img src="@item.ImageUrl" class="card-img-top" style="height:150px; object-fit:cover; border-top-left-radius: .5rem; border-top-right-radius: .5rem;" alt="@item.NameSurname">
                    <div class="card-body d-flex flex-column p-2">
                        <h6 class="card-title fw-bold mb-1">@item.NameSurname</h6>
                        <small class="text-muted mb-2">@item.CityCountry</small>
                        <p class="card-text flex-grow-1 mb-2" style="font-size:0.85rem;">@item.Comment</p>
                        <div class="d-flex justify-content-between">
                            <a href="/Testimonial/UpdateTestimonial/@item.TestimonialId" class="btn btn-sm btn-outline-primary">Güncelle</a>
                            <a href="/Testimonial/DeleteTestimonial/@item.TestimonialId" class="btn btn-sm btn-outline-danger">Sil</a>
                        </div>
                    </div>
                </div>
            </div>
        }
    </div>

    <div class="text-center mt-4">
        <a href="/Testimonial/CreateTestimonial/" class="btn btn-info fw-semibold">Yeni Yorum Ekle</a>
    </div>
</div>
