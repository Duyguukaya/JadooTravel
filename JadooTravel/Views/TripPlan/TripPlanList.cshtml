@model List<JadooTravel.Dtos.TripPlanDtos.ResultTripPlanDto>
@{
    ViewData["Title"] = "TripPlanList";
    Layout = "~/Views/Admin/Index.cshtml";
}

<link href="~/lib/bootstrap/dist/css/bootstrap.min.css" rel="stylesheet" />

<div class="container">
    <br />
    <br />
    <table class="table table-bordered">
        <tr>
            <th>#</th>
            <th>Servis Başlığı</th>
            <th>Servis Açıklaması</th>
            <th>Servis İkonu</th>
            <th>Sil</th>
            <th>Güncelle</th>
        </tr>
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.TripPlanId</td>
                <td>@item.Title</td>
                <td>@item.Description</td>
                <td>@item.IconUrl</td>
                <td><a href="/TripPlan/DeleteTripPlan/@item.TripPlanId" class="btn btn-danger">Sil</a></td>
                <td><a href="/TripPlan/UpdateTripPlan/@item.TripPlanId" class="btn btn-success">Güncelle</a></td>
            </tr>
        }
    </table>
    <a href="/TripPlan/CreateTripPlan/" class="btn btn-info">Yeni Servis Girişi</a>
</div>


