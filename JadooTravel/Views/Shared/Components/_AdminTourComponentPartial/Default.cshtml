<div class="row">
    <div class="col-lg-12">
        <div class="card w-100">
            <div class="card-body">
                <div class="d-flex mb-4 justify-content-between align-items-center">
                    <h5 class="mb-0 fw-bold">Son Eklenen 5 Tur</h5>
                </div>

                <div class="list-group">
                    @foreach (var tour in ((IEnumerable<JadooTravel.Dtos.DestinationDtos.ResultDestinationDto>)ViewBag.LastFiveTours))
                    {
                        <div class="list-group-item list-group-item-action d-flex align-items-center mb-3 shadow-sm rounded">

                            <!-- Resim -->
                            <img src="@tour.ImageUrl" alt="@tour.CityCountry" class="rounded me-3" style="width:120px; height:80px; object-fit:cover;">

                            <!-- Bilgiler -->
                            <div class="flex-grow-1 d-flex justify-content-between align-items-center">
                                <div>
                                    <h6 class="fw-bold mb-1">@tour.CityCountry</h6>
                                    <p class="mb-0 text-truncate" style="max-width:400px;" title="@tour.Description">@tour.Description</p>
                                </div>
                                <div class="text-end">
                                    <p class="mb-1"><strong>Fiyat:</strong> ₺@tour.Price</p>
                                    <p class="mb-1"><strong>Gün/Gece:</strong> @tour.DayNight</p>
                                    <p class="mb-0"><strong>Kapasite:</strong> @tour.Capacity</p>
                                </div>
                            </div>
                        </div>
                    }
                </div>

            </div>
        </div>
    </div>
</div>
