<div class="col-lg-12 col-sm-6" style="height: 61vh;">
    <div class="card">
        <div class="card-body">
            <h5 class="card-title mb-3 fw-semibold">Tur Fiyatlarının Öne Çıkanları”</h5>

            <!-- En Yüksek Fiyatlı Tur -->
            <div class="d-flex align-items-center justify-content-between mb-4 p-3 bg-light-success rounded">
                <div>
                    <p class="mb-1 text-success fw-semibold">En Yüksek Fiyatlı Tur</p>
                    <h4 class="fw-bold mb-0">@ViewBag.HighestTour.Name</h4>
                </div>
                <div>
                    <h4 class="fw-bold text-success mb-0">₺@ViewBag.HighestTour.Price</h4>
                </div>
            </div>

            <!-- En Düşük Fiyatlı Tur -->
            <div class="d-flex align-items-center justify-content-between p-3 bg-light-danger rounded">
                <div>
                    <p class="mb-1 text-danger fw-semibold">En Düşük Fiyatlı Tur</p>
                    <h4 class="fw-bold mb-0">@ViewBag.LowestTour.Name</h4>
                </div>
                <div>
                    <h4 class="fw-bold text-danger mb-0">₺@ViewBag.LowestTour.Price</h4>
                </div>
            </div>
        </div>
    </div>
</div>
