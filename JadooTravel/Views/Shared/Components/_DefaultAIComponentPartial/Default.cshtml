@inject Microsoft.Extensions.Localization.IStringLocalizer<SharedResource> L

<section class="pt-6">
    <div class="container">
        <div class="py-8 px-5 position-relative text-center" style="background-color: rgba(223, 215, 249, 0.15);border-radius: 30px;">
            <div class="row justify-content-center">
                <div class="col-lg-8 col-md-10">

                    <h2 data-i18n="ai.desc" class="text-secondary lh-1-7 mb-4">
                        @L["AISearch"]
                    </h2>

                    <!-- AI Form Panel -->
                    <div class="card shadow-sm p-4 mb-4">
                        <form id="cityForm" class="d-flex gap-2 flex-column flex-sm-row">
                            <input class="form-control" id="cityInput" type="text" name="city" placeholder="Şehir giriniz" required />
                            <button data-i18n="ai.button" type="submit" class="btn btn-primary flex-shrink-0">@L["AIButton"]</button>
                        </form>
                    </div>

                    <!-- Sonuç Kutusu -->
                    <div id="resultBox" class="card shadow-sm p-4 mt-3" style="display:none;">
                        <h4 class="text-dark mb-3" id="resultTitle"></h4>
                        <ol id="resultList" class="list-group list-group-numbered"></ol>
                    </div>

                    <!-- Hata Mesajı -->
                    <div id="errorBox" class="alert alert-danger mt-3" style="display:none;"></div>

                </div>
            </div>
        </div>
    </div>
</section>

<script>
    document.getElementById('cityForm').addEventListener('submit', function (e) {
        e.preventDefault();

        const city = document.getElementById('cityInput').value;
        const resultBox = document.getElementById('resultBox');
        const resultList = document.getElementById('resultList');
        const resultTitle = document.getElementById('resultTitle');
        const errorBox = document.getElementById('errorBox');

        // Reset
        resultBox.style.display = "none";
        errorBox.style.display = "none";
        resultList.innerHTML = "";

        fetch('/Ai/GetPlaces', {
            method: 'POST',
            headers: { 'Content-Type': 'application/x-www-form-urlencoded' },
            body: 'city=' + encodeURIComponent(city)
        })
        .then(res => res.json())
        .then(data => {
            if (data.success) {
                resultTitle.innerText = data.city + " şehrinde gezilecek yerler:";
                data.results.forEach(item => {
                    const li = document.createElement("li");
                    li.classList.add("list-group-item");
                    li.innerText = item;
                    resultList.appendChild(li);
                });
                resultBox.style.display = "block";
            } else {
                errorBox.innerText = data.error;
                errorBox.style.display = "block";
            }
        })
        .catch(err => {
            errorBox.innerText = "Bir hata oluştu: " + err;
            errorBox.style.display = "block";
        });
    });
</script>
