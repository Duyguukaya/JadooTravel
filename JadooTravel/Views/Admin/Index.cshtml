@{
    Layout = null;
}

<!doctype html>
<html lang="en">

<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <title>Spike Free Bootstrap Admin Template by WrapPixel</title>
    <link rel="shortcut icon" type="image/png" href="~/Spike-Bootstrap-1.0.0/src/assets/images/logos/favicon.png" />
    <link rel="stylesheet" href="~/Spike-Bootstrap-1.0.0/src/assets/css/styles.min.css" />
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
</head>

<body>
    <!--  Body Wrapper -->
    <div class="page-wrapper" id="main-wrapper" data-layout="vertical" data-navbarbg="skin6"
         data-sidebartype="full" data-sidebar-position="fixed" data-header-position="fixed">

        <!-- 🔹 Topbar -->
        <header class="app-header bg-light px-4 py-2 d-flex justify-content-between align-items-center" style="height:60px; position:fixed; top:0; left:0; right:0; z-index:1030;">
            <h5 class="mb-0">JadooTravel Admin</h5>
            <a href="/Login/Logout" class="btn btn-danger btn-sm">Çıkış Yap</a>
        </header>

        <!-- Sidebar Start -->
        <aside class="left-sidebar" style="position:fixed; top:60px; bottom:0; overflow-y:auto;">
            <div class="h-100">
                <div class="brand-logo d-flex align-items-center justify-content-between px-3 py-2">
                    <a href="/Dashboard/AdminDashboard" class="text-nowrap logo-img">
                        <img src="~/Spike-Bootstrap-1.0.0/src/assets/images/logos/logo.svg" alt="" />
                    </a>
                    <div class="close-btn d-xl-none d-block sidebartoggler cursor-pointer" id="sidebarCollapse">
                        <i class="ti ti-x fs-8"></i>
                    </div>
                </div>
                <!-- Sidebar navigation-->
                <nav class="sidebar-nav scroll-sidebar" data-simplebar>
                    <ul id="sidebarnav">
                        <li class="sidebar-item">
                            <a class="sidebar-link primary-hover-bg" href="/Admin/AdminDashboard/">
                                <iconify-icon icon="solar:notes-broken" width="24" height="24"></iconify-icon>
                                <span class="hide-menu">Dashboard</span>
                            </a>
                        </li>
                        <li class="sidebar-item">
                            <a class="sidebar-link primary-hover-bg" href="/Category/CategoryList">
                                <iconify-icon icon="material-symbols:list-alt-outline" width="24" height="24"></iconify-icon>
                                <span class="hide-menu">Category</span>
                            </a>
                        </li>
                        <li class="sidebar-item">
                            <a class="sidebar-link primary-hover-bg" href="/Destination/DestinationList">
                                <iconify-icon icon="solar:gallery-edit-line-duotone" width="24" height="24"></iconify-icon>
                                <span class="hide-menu">Destination</span>
                            </a>
                        </li>
                        <li class="sidebar-item">
                            <a class="sidebar-link primary-hover-bg" href="/Rezervation/RezervationList">
                                <iconify-icon icon="solar:letter-linear" width="24" height="24"></iconify-icon>
                                <span class="hide-menu">Booking</span>
                            </a>
                        </li>
                        <li class="sidebar-item">
                            <a class="sidebar-link primary-hover-bg" href="/Feature/FeatureList">
                                <iconify-icon icon="solar:layers-minimalistic-outline" width="24" height="24"></iconify-icon>
                                <span class="hide-menu">Feature</span>
                            </a>
                        </li>
                        <li class="sidebar-item">
                            <a class="sidebar-link primary-hover-bg" href="/Testimonial/TestimonialList">
                                <iconify-icon icon="solar:chat-square-check-line-duotone" width="24" height="24"></iconify-icon>
                                <span class="hide-menu">Testimonial</span>
                            </a>
                        </li>
                        <li class="sidebar-item">
                            <a class="sidebar-link primary-hover-bg" href="/TripPlan/TripPlanList">
                                <iconify-icon icon="solar:history-3-linear" width="24" height="24"></iconify-icon>
                                <span class="hide-menu">TripPlan</span>
                            </a>
                        </li>
                    </ul>
                </nav>
            </div>
        </aside>
        <!-- Sidebar End -->
        <!-- Main wrapper -->
        <div class="body-wrapper" style="margin-left:250px;">
            <div class="body-wrapper-inner">
                <div class="container-fluid">
                    @RenderBody()
                </div>
            </div>
        </div>
    </div>

    <script src="~/Spike-Bootstrap-1.0.0/src/assets/libs/jquery/dist/jquery.min.js"></script>
    <script src="~/Spike-Bootstrap-1.0.0/src/assets/libs/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/Spike-Bootstrap-1.0.0/src/assets/js/sidebarmenu.js"></script>
    <script src="~/Spike-Bootstrap-1.0.0/src/assets/js/app.min.js"></script>
    <script src="~/Spike-Bootstrap-1.0.0/src/assets/libs/apexcharts/dist/apexcharts.min.js"></script>
    <script src="~/Spike-Bootstrap-1.0.0/src/assets/libs/simplebar/dist/simplebar.js"></script>
    <script src="~/Spike-Bootstrap-1.0.0/src/assets/js/dashboard.js"></script>
    <!-- solar icons -->
    <script src="https://cdn.jsdelivr.net/npm/iconify-icon@1.0.8/dist/iconify-icon.min.js"></script>

</body>

</html>
