@model List<JadooTravel.Dtos.FeatureDtos.ResultFeatureDto>
@{
    Layout = "~/Views/Admin/Index.cshtml";
}

<div class="container py-5">
    <div class="card shadow-sm rounded-4">
        <div class="card-header d-flex justify-content-between align-items-center" style="background-color:#b8d0eb; color:#1a1a1a; border-radius: .5rem .5rem 0 0;">
            <h4 class="mb-0">Özellikler Listesi</h4>
            <a href="/Feature/CreateFeature/" class="btn btn-light btn-sm fw-semibold">
                <i class="bi bi-plus-circle me-1"></i> Yeni Özellik
            </a>
        </div>
        <div class="card-body p-0">
            <table class="table table-hover table-striped mb-0 text-center">
                <thead style="background-color:#e1ecf9;">
                    <tr>
                        <th>#</th>
                        <th>Başlık</th>
                        <th>Ana Başlık</th>
                        <th>Açıklama</th>
                        <th>Video Url</th>
                        <th>İşlemler</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td>@item.FeatureId</td>
                            <td>@item.Tittle</td>
                            <td>@item.MainTittle</td>
                            <td>@item.Description</td>
                            <td>@item.VideoUrl</td>
                            <td>
                                <a href="/Feature/UpdateFeature/@item.FeatureId" class="btn btn-sm btn-outline-primary me-2">
                                    <i class="bi bi-pencil-square"></i> Güncelle
                                </a>
                                <a href="/Feature/DeleteFeature/@item.FeatureId" class="btn btn-sm btn-outline-danger">
                                    <i class="bi bi-trash"></i> Sil
                                </a>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>
