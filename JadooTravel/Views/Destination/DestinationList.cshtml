@model List<JadooTravel.Dtos.DestinationDtos.ResultDestinationDto>
@{
    Layout = "~/Views/Admin/Index.cshtml";
}

<div class="container py-5">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h3 class="fw-bold">Tur Listesi</h3>
        <a href="/Destination/CreateDestination/" class="btn btn-primary">
            <i class="bi bi-plus-circle me-1"></i> Yeni Tur
        </a>
    </div>

    <div class="row g-4">
        @foreach (var item in Model)
        {
            <div class="col-md-6 col-lg-4">
                <div class="card shadow-sm h-100">
                    <img src="@item.ImageUrl" class="card-img-top" style="height:200px; object-fit:cover;" alt="@item.CityCountry" />
                    <div class="card-body d-flex flex-column">
                        <h5 class="card-title fw-semibold">@item.CityCountry</h5>
                        <p class="card-text mb-1"><strong>Fiyat:</strong> @item.Price ₺</p>
                        <p class="card-text mb-1"><strong>Kapasite:</strong> @item.Capacity</p>
                        <div class="mt-auto d-flex justify-content-between">
                            <a href="/Destination/UpdateDestination/@item.DestinationId" class="btn btn-sm btn-outline-primary">
                                <i class="bi bi-pencil-square me-1"></i> Güncelle
                            </a>
                            <a href="/Destination/DeleteDestination/@item.DestinationId" class="btn btn-sm btn-outline-danger">
                                <i class="bi bi-trash me-1"></i> Sil
                            </a>
                        </div>
                    </div>
                </div>
            </div>
        }
    </div>
</div>
