@model JadooTravel.Dtos.DestinationDtos.CreateDestinationDto

@{
    Layout = "~/Views/Admin/Index.cshtml";
}

<link href="~/lib/bootstrap/dist/css/bootstrap.min.css" rel="stylesheet" />

<div class="container">
    <br />
    <br />
    <form method="post">
        <input type="text" asp-for="CityCountry" placeholder="Şehir ve Ülke Giriniz" class="form-control" />
        <br />
        <input type="text" asp-for="ImageUrl" placeholder="Fotoğraf Yolu Giriniz" class="form-control" />
        <br />
        <input type="text" asp-for="Price" placeholder="Fiyat Giriniz" class="form-control" />
        <br />
        <input type="text" asp-for="DayNight" placeholder="Gün/Gece Sayısı Giriniz" class="form-control" />
        <br />
        <input type="text" asp-for="Capacity" placeholder="Kapatite Giriniz" class="form-control" />
        <br />
        <textarea asp-for="Description" placeholder="Tur Açıklamasını Giriniz" rows="5" class="form-control"></textarea>
        <br />
        <button class="btn btn-primary">Turu Ekle</button>
    </form>
</div>
